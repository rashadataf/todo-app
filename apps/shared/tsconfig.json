{
    "compilerOptions": {
        "outDir": "./lib",
        "rootDir": "./src",
        "composite": true,
        "sourceMap": false,
        "declarationMap": true,
        "declaration": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "es5",
        "module": "CommonJS",
        "lib": [
            "es6"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}